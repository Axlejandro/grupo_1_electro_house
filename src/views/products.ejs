<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

    <body>

        <%- include('./partials/header') %>

            <main>

                <div>
                    <section class="banner">
                        <img src="images/logo/banner.png" alt="Banner de ofertas" class="banner">
                    </section>
                </div>

                <section class="newitems">
                    <h3>Productos</h3>

                    <div class="products">

                        <%products.forEach(product=> { %>



                            <article>
                                <img src="/images/portatiles/<%= product.image%>" alt="Imagen" class="product_img">
                                <div class="main-article">
                                    <h4 class="description">
                                        <%= product.description%>
                                    </h4>
                                    <div class="price-discount">
                                        <p class="price">$ <%= product.price%>
                                        </p>
                                        <% if (product.discount>0) { %>
                                            <p class="discount">
                                                <%= product.discount%>
                                            </p>
                                            <% } %>
                                    </div>
                                </div>

                            </article>

                            <% }) %>

                    </div>

                </section>

            </main>


            <%- include('./partials/footer') %>



    </body>

</html>