<!DOCTYPE html>
<html>

    <%- include('../partials/head') %>

<body>
    <%- include('../partials/header') %>

  
  
   <br>
   <main class="cart">
                <h1 class="titulo-cart">CARGAR PRODUCTO</h1>

                <section class="resumen-compra">
                    <div class="caja-cupon">
                        <br>
                        <br>
                        <br>

                        <form action="/products/edit/<%= product.id%>?_method=PUT" method="POST" class="form-register" enctype="multipart/form-data" id="form">
                            <div>
                            <input type="text" name="name" value="<%= product.name%>" placeholder="Nombre del producto" id="name">
                            <small></small>
                            </div>
                            <br>
                            <div>
                            <input type="text" name="description" value="<%= product.description%>" placeholder="Descripción del producto" id="description">
                            <small></small>
                            </div>
                            <br><br>                        
                            <h4>Subí la foto del producto</h4>
                            <br>
                            
                            <input type="file" name="image">
                            
                            <br><br>  
                            <div>                          
                            <input type="text" name="price" value="<%= product.price%>" placeholder="Precio" id="price">
                            <small></small>
                            </div>

                            <h4>Categoria</h4>                            
                            <select name="category">
                                <% category.forEach(category=> { %>
                                <option  value="<%=category.id%>" <%= category.id==product.categories_id ? 'selected="selected"':''%>>
                                    <%= category.name%>

                                </option>
                                <%})%>
                            </select>

                            <h4>Marca</h4>
                            <select name="brand">
                                <% brand.forEach(brand=> { %>
                                <option  value="<%=brand.id%>" <%= brand.id==product.brand_id ? 'selected="selected"':''%>>
                                    <%= brand.name%>

                                </option>
                                <%})%>
                            </select>                          
                            <br><br><br>                            
                            <button class="btn" type="submit">Editar</button>
                            <br>
                        
        </div>
        </section>
    
    </main>
</div>
<script src="/js/editProductValidate.js"></script>

</body>

</html>