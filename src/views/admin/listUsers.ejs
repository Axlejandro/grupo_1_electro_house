<!DOCTYPE html>
<html>
    <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
   <br>
   <div class="container">
    <main class="register">
        <h2>Administrador de usuarios</h2>
        <br>
        <table>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th colspan="2">Acciones</th>
            </tr>
            <%user.forEach(user=> { %>
                <tr>
                    <td>
                        <p class="list-article">
                            <%= user.fullName%>
                        </p>
                    </td>
                    <td>
                        <p class="list-article">
                            <%= user.email%>
                        </p>
                    </td>
                    <td>
                        <a href="/users/edit/<%= user.id%>"><button class="button-edit" type="submit">Editar</button></a>
                    </td>
                    <td>
                        <form action="/users/delete/<%= user.id%>?_method=DELETE" method="POST" class="form-register" enctype="multipart/form-data">
                            <button class="button-edit" type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>
    </main>
    <br><br>
</div>
<%- include('../partials/footer') %>
</body>
</html>
    